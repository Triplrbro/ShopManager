<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@mipmap/logo" />

    <RelativeLayout
        android:id="@+id/rl_admin_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="80dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_order_manager"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/shape_admin_button"
            android:gravity="center"
            android:text="订 单 管 理"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_book_manager"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/tv_order_manager"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/shape_admin_button"
            android:gravity="center"
            android:text="商 品 管 理"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_order_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="80dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_order_send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/shape_admin_button"
            android:gravity="center"
            android:text="订单发货"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_order_not_over"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_order_send"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_admin_button"
            android:gravity="center"
            android:text="未完成订单"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_order_over"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_order_not_over"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_admin_button"
            android:gravity="center"
            android:text="已完成订单"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_book_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="80dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_add_book"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/shape_admin_button"
            android:gravity="center"
            android:text="添加书籍"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_change_book"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_add_book"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_admin_button"
            android:gravity="center"
            android:text="修改书籍"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_delete_book"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_change_book"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_admin_button"
            android:gravity="center"
            android:text="删除书籍"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/close"
        android:id="@+id/iv_back_to_admin_manager"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_close_admin_manager"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/close_admin" />

</RelativeLayout>