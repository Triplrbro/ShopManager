<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_book_item"
    android:padding="@dimen/margin_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_book"
        android:layout_width="80dp"
        android:layout_height="104dp" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="101dp"
        android:text="万古江河"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_book_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="@dimen/margin_10"
        android:text="作者："
        android:textColor="@color/gray5"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_book_author"
        android:layout_alignParentStart="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="@dimen/margin_20"
        android:text="￥"
        android:textColor="@color/gray8"
        android:textSize="@dimen/textSize_20"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:text="×"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:lineHeight="30dp"
            android:textAlignment="center"
            android:textSize="@dimen/textSize_20"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_shop_num"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:lineHeight="30dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="@dimen/textSize_20"
            android:textStyle="bold" />

    </LinearLayout>


    <include
        android:layout_below="@id/im_book"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_width="match_parent"
        layout="@layout/item_underline"/>
</RelativeLayout>